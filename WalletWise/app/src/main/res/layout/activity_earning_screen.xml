<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Earnings.EarningScreens.EarningScreen"
    android:background="@drawable/bg_project"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabPrevMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/arrow_left_icon"
            android:backgroundTint="@color/lightBlue"/>

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCurEarningMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תאריך"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNextMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/arrow_right_icon"
            android:backgroundTint="@color/lightBlue"/>
    </LinearLayout>


    <ListView
        android:id="@+id/listviewE"
        android:layout_width="416dp"
        android:layout_height="519dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/lightBlue"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

        <TextView
            android:id="@+id/tvMonthlyHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00 שעות "
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMonthlyEarnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ₪0"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold" />


        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddEarningShift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightBlue"
            android:clickable="true"
            app:srcCompat="@drawable/add_icon" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_earning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nav_bar_style"
        app:itemRippleColor="@color/lightBlue"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:labelVisibilityMode="selected"
        app:menu="@menu/menu_navigation"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="8dp"
        android:elevation="5dp"
        />

</LinearLayout>