<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Spendings.SpendingScreens.SpendingScreen"
    android:background="@drawable/bg_project"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/sbSearch"
            android:layout_width="354dp"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/lightBlue"
            android:clickable="true"
            android:src="@drawable/filter_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:id="@+id/listviewS"
        android:layout_width="416dp"
        android:layout_height="519dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            app:icon="@drawable/add_icon"
            android:id="@+id/btnAddSpending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/lightBlue"
            android:text="הוסף הוצאה"
            android:textStyle="bold" />
    </LinearLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_spendings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/nav_bar_style"
            app:itemRippleColor="@color/lightBlue"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="@drawable/selector"
            app:labelVisibilityMode="selected"
            app:menu="@menu/menu_navigation"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="8dp"
            android:elevation="5dp" />






</LinearLayout>
